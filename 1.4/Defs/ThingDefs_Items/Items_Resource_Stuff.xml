<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>VRecyclingE_TrashBrick</defName>
    <label>trashbrick</label>
    <description>A stack of solid bricks, created by compressing non-toxic trash into a brick form. The surface is heat-sealed for safe transport. Trashbricks are a durable building material for constructing walls and floors. If damaged or burned, they will release a moderate amount of toxic fumes and pollute the area. Trashbricks do not deteriorate.</description>
    <graphicData>
      <texPath>Things/Item/Resource/StoneBlocks</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Stone_Drop</soundInteract>
    <soundDrop>Stone_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <tradeability>None</tradeability>
	<stackLimit>25</stackLimit>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>0.2</MarketValue>
      <SharpDamageMultiplier>0.65</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.0</BluntDamageMultiplier>
      <Beauty>-40</Beauty>
      <ConstructionSpeedFactor>0.8</ConstructionSpeedFactor>
      <Flammability>1</Flammability>
	  <Mass>0.9</Mass>
    </statBases>
    <thingCategories>
      <li>StoneBlocks</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <minRewardCount>10</minRewardCount>
    <stuffProps>
      <color>(113,113,113)</color>
      <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>slate</stuffAdjective>
      <canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff>
      <categories>
        <li>Stony</li>
      </categories>
      <commonality>0</commonality>
      <appearance>Bricks</appearance>
      <statOffsets>
        <WorkToBuild>140</WorkToBuild>
		<Beauty>-5</Beauty>
      </statOffsets>
      <statFactors>
        <MarketValue>0.4</MarketValue>
        <Beauty>-4</Beauty>
        <MaxHitPoints>0.5</MaxHitPoints>
        <Flammability>0</Flammability>
        <WorkToBuild>12.0</WorkToBuild>
        <WorkToMake>2.0</WorkToMake>
        <DoorOpenSpeed>0.35</DoorOpenSpeed>
        <BedRestEffectiveness>0.45</BedRestEffectiveness>
        <MeleeWeapon_CooldownMultiplier>1.30</MeleeWeapon_CooldownMultiplier>
      </statFactors>
      <canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff>
    </stuffProps>
    <comps>
      <li Class="CompProperties_GasOnDamage">
        <type>ToxGas</type>
        <damageFactor>0.5</damageFactor>
        <useStackCountAsFactor>true</useStackCountAsFactor>
      </li>
      </li>
    </comps>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <allowedArchonexusCount>25</allowedArchonexusCount>
  </ThingDef>

</Defs>
